{%- from "components/modal.njk" import authModal -%}

<!doctype html>
<html lang="en" class="min-h-screen" x-data="{timezone: $persist('America/Los_Angeles'), modal: false }">
  {% include 'layouts/html_head.njk' %}
  <body
  data-theme="auto"
  x-data="global"
  class="min-h-screen bg-primary"
  :style="(modal) && 'overflow: hidden; height: 100vh;'"
  >
    <div class="relative z-10 grid min-h-screen shadow page-wrapper border-b-1 border-highlight-2 ">
      {# Header with branding and nav #}
      <div class="header-wrapper">
        {% block header %}{% endblock %}
      </div>
      {# Decorative underbrush svg #}
      <div class="relative content-wrapper bg-primary" >
        <div style="-webkit-mask: url(/static/images/underbrush.svg) repeat-x; mask: url(/static/images/underbrush.svg) repeat-x; pointer-events: none; -webkit-mask-position: bottom; mask-position: bottom" class="h-10 underbrush bg-main-gradient-top">
        </div>
      </div>
      <div class="relative bg-main-gradient-top"  style="height: 1.5rem">
      </div>
      <div class="relative content-wrapper bg-main-gradient-top pb-lg" style="padding-top: 2rem">
        {# Main Content Area. <main> tag should live in content block #}
        {% block content %}{% endblock %}
      </div>
    </div>
    {% include 'components/footer.njk' %}
    {# SVG Gradient used for svg icons sprite #}
    {% include 'components/svg-gradient.njk' %}
    {# Extra optional pagebottom code scripts and styles #}
    {% block pagebottom %}{% endblock %}
    {# Model Popup #}
    {{ authModal() }}
    {# Toast Notification #}
    {# data in global #}
    <div class="fixed z-50 flex justify-center w-full bottom-8" 
    x-cloak x-show="toast" x-transition 
    @click.outside="toast = null">
      <div class="flex px-3 text-sm border-4 rounded-lg shadow-lg w-80 bg-body text-primary border-primary py-sm gap-base">
        <p x-html="toast" class="flex-grow"></p>
        <div>
          <button @click="toast = null" class="flex items-center justify-center w-6 h-6 border-2 border-solid rounded border-body bg-primary">
            <svg class="w-3 h-3 fill-body">
              <use xlink:href="/static/images/icons.svg#close"></use>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </body>

</html>