                                    @change="if ($el.files.length > 0) src = URL.createObjectURL($el.files[0])">
                                    <img id="image-preview" class="hidden object-cover object-center rounded-md my-sm" style="aspect-ratio: 16/9"
                                    :src="src" :style="src && 'display:block'"/>
                                </div> #}
                            </fieldset>
                            {# END Event Info #}

                            {# Scheduling Info - player age must be completed #}
                            <fieldset x-ref="scheduling" >
                                <legend>Scheduling Info</legend>

                                <input type="hidden" name="eventLength" value="1" x-validate>
                                <div >
                                    <label>Scheduling Preferences</label>
                                    <div class="prose my-sm" >
                                        <p>All times are in Pacific Standard Time</p>
                                    </div>
                                    <div class="flex flex-col gap-2xs">
                                        <div>
                                            <input type="checkbox" name="schedulingPref" id="No-Preference" value="No Preference">
                                            <label for="No-Preference">No Preference</label>
                                        </div>
                                        <template x-for="(time, i) in scheduleTimes($validate.value('format'),$validate.value('eventLength'))">
                                            <div>
                                                <input type="checkbox" name="schedulingPref" :id="'time' + i" :value="time">
                                                <label :for="'time' + i" x-text="time"></label>
                                            </div>
                                        </template>
                                    </div>
                                </div>
                            </fieldset>
                            {# END Scheduling Info #}
