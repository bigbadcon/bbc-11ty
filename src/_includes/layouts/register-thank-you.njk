{% extends 'layouts/base.njk' %}

{% block header %}
    {% include 'components/header.njk' %}
{% endblock %}

{% block content %}
    <main id="content">
        <div class="mx-auto max-w-content p-base px-lg bg-card rounded-md shadow-md">
            <h1 class="font-serif text-4xl font-bold leading-none md:text-5xl text-header mb-base">{{title}}</h1>
            <section>
                {# Loading spinner #}
                <div x-cloak x-show="isAuth && isRegistered === null" 
                x-init="checkRegistration()"
                class="flex items-center justify-center gap-sm animate-pulse py-md">
                    <div class="w-8 h-8 rounded-full bg-body"></div>
                    <div class="w-8 h-8 rounded-full bg-body"></div>
                    <div class="w-8 h-8 rounded-full bg-body"></div>
                </div>
                {# Registration info #}
                <div x-cloak x-show="isAuth && isRegistered === true" class="prose">
                    <h2>You are registered!</h2>
                    <p>
                        You, <strong>
                            <span x-text="user.displayName"></span> (<span x-text="user.userNicename"></span>)</strong>, are registered for Go Play NW. You can prepare for the event by join the special event Discord using the invite link below.
                    </p>
                    {# <p>We will post the event Discord invite link here once it gets closer to the date.</p> #}
                    <p>
                </p>
            </div>
        </section>
        <div class="prose">{{ content | safe }}</div>
    </div>
</main>
{% endblock %}