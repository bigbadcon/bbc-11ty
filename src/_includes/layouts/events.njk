{% extends 'layouts/base.njk' %}

{% block header %}
    {% include 'components/header.njk' %}
{% endblock %}

{% block content %}
    <main id="content">
        <div class="mx-auto max-w-hero p-base">
            <h1 class="font-serif text-4xl font-bold leading-none md:text-5xl text-header mb-base">{{title}}</h1>
            <div class="prose max-w-content">{{ content | safe }}</div>
            {% include 'components/events-table.njk' %}
            {% if suggestEvent %}
                <div class="mx-auto border-t-4 border-solid max-w-hero border-hr mt-md pt-base">
                    <a href="/suggest-an-event" class="icon-light-bulb">Suggest an Event</a>
                </div>
            {% endif %}
            {% if runEvent %}
                <div class="mx-auto border-t-4 border-solid max-w-hero border-hr mt-md pt-base">
                    <a href="/run-an-event" class="icon-dice">Run an Event</a>
                </div>
            {% endif %}
        </div>
    </main>
{% endblock %}