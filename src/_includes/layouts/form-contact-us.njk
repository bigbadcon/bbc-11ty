{% extends 'layouts/base.njk' %}

{% block content %}
    <main id="content">
        <div class="mx-auto max-w-content p-base">
            <h1 class="font-serif text-4xl font-bold leading-none md:text-5xl text-header mb-base">{{title}}</h1>
            <div class="prose">{{ content | safe }}</div>
            <section class="my-base text-body">

                <form  
                data-netlify="true" 
                netlify-honeypot="bot-field"
                {# data-netlify-recaptcha="true" #}
                method="POST" 
                name="contact-us"  
                action="/contact-us-thank-you"
                x-data="{messageSubject:''}"
                >
                    <div class="prose">
                        <p class="hidden">
                            <label>Don’t fill this out if you’re human: <input name="bot-field"/></label>
                        </p>
                    </div>
                    <input type="hidden" name="subject" data-remove-prefix value="Big Bad Contact Us" :value="messageSubject ? `Big Bad Contact Us: ${messageSubject}` : 'Big Bad Contact Us'"/>
                    <fieldset>
                        <legend>Contact Form</legend>
                        <div class="space-y-sm">
                            <p class="text-body mb-base">
                                <span class="font-bold text-highlight">*</span> Required</p>
                            {# Name #}
                            <div>
                                <label for="name" class="text-xs uppercase">Name <span class="font-bold text-highlight">*</span></label>
                                <input class="w-64" id="name" name="name" required type="text" value=""/>
                            </div>
                            {# Email #}
                            <div>
                                <label for="userEmail" class="text-xs uppercase">Email <span class="font-bold text-highlight">*</span></label>
                                <input class="w-64" id="userEmail" name="userEmail" required type="email" value=""/>
                            </div>

                            {# Subject #}
                            <div>
                                <label for="messageSubject" class="text-xs uppercase">Subject <span class="font-bold text-highlight">*</span></label>
                                <select class="w-64" id="subject" name="messageSubject" required value="" x-model="messageSubject">
                                    <option default disabled value="">-- subject of message --</option>
                                    <option>Lost my login or password</option>
                                    <option>Other user account question</option>
                                    <option>Site question or feedback</option>
                                    <option>Question or feedback about the event</option>
                                    <option>Volunteering question</option>
                                    <option>Other</option>
                                </select>
                            </div>
                            <div>
                                <label for="message" class="text-xs uppercase">Message <span class="font-bold text-highlight">*</span></label>
                                <textarea class="w-96" id="message" name="message" required value="" rows="4"></textarea>
                            </div>
                            <input type="hidden" value="contact-us" name="formName" id="formName"/>
                        </div>
                    </fieldset>
                    {# <div data-netlify-recaptcha="true"></div> #}
                    <p class="mt-base">
                        <button type="submit" >Submit</button>
                    </p>
                </form>
            </section>
        </div>
    </main>
{% endblock %}

