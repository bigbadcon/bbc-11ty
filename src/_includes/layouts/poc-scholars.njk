{% extends 'layouts/base.njk' %}
{% import 'components/bio-card.njk' as biocard %}

{% block header %}
  {% include 'components/header.njk' %}
{% endblock %}

{% block content %}
  <main id="content">
    <div class="mx-auto max-w-content p-base">
      <h1 class="font-serif text-4xl font-bold leading-none md:text-5xl text-header mb-base">{{title}}</h1>
      <div class="prose">{{ content | safe }}</div>
    </div>
    <section class="flex flex-col mx-auto max-w-content p-base gap-lg">
      {% for person in collections["poc-scholar"] | published | sort %}
        {{ biocard.card(person)}}
      {% endfor %}
    </section>
    {% if collections["poc-team-member"] | published | sort %}
      <section class="flex flex-col mx-auto max-w-content p-base gap-lg">
        <h1 class="font-serif text-5xl leading-none text-header">Team Members</h1>
        {% for person in collections["poc-team-member"] %}
          {{ biocard.card(person)}}
        {% endfor %}
      </section>
    {% endif %}
  </main>
{% endblock %}