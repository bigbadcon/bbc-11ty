{% extends 'layouts/base.njk' %}

{% block header %}
{% include 'components/header.njk' %}
<section class="bg-primary">
    <div class="grid mx-auto md:grid-cols-3 max-w-hero px-base">
        <div class="md:pt-lg">
            <div class="prose">
                {{ content | safe }}
            </div>
        </div>
        <div class="relative row-start-1 md:col-span-2 md:row-start-auto">
            {% include 'components/forest.njk' %}
            <div class="absolute w-1/2 bottom-2 right-2">{% include 'components/red.njk' %}</div>
        </div>
    </div>
</section>
{% endblock %}

{% block content %}

<main id="content">
    <div class="mx-auto max-w-hero px-base py-base">
        <ul class="grid gap-4 sm:grid-cols-2 md:grid-cols-3">
            {% for card in collections.cards123ABC %}
                <li class="rounded shadow-md bg-card px-base py-sm">
                    <h2 class="font-serif text-3xl text-header">{{ card.data.title }}</h2>
                    <div class="prose">{{ card.templateContent | safe }}</div>
                </li>
            {% endfor %}
        </ul>
    </div>
</main>

{% endblock %}