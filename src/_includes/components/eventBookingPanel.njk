<div class="rounded-md shadow mt-md text-body p-base bg-card" >
    <h2 class="-mt-1 font-serif text-2xl font-bold leading-none md:text-4xl text-header mb-sm">Event Booking</h2>
    {# Event Name, spaces open, and list of players; only show if logged in and has event data #}
    <div x-cloak x-show="isAuth && spacesTotal">
        <div>
            <span>Spaces Open:</span>
            <span x-text="spacesOpen"></span> out of <span x-text="spacesTotal"></span>
        </div>
        <div x-cloak x-show="bookings && bookings.length > 0">
            <h4 class="font-serif text-2xl font-semibold mt-sm">Player List</h4>
            <ul class="list-disc pl-md">
                <template x-for="booking in bookings">
                    <li class="mb-xs" x-text="booking && booking.user.displayName"></li>
                </template>
            </ul>
        </div>
        {# Booking buttons #}
        <div class="flex mt-base gap-sm">
            <button class="button" x-show="spacesOpen > 0 && !isBooked({{event.eventId}})" @click="bookEvent({{event.eventId}})">Book Event</button>
            <span x-show="spacesOpen <= 0 && !isBooked({{event.eventId}})" class="font-bold">Event is full</span>
            <button class="button" x-show="isBooked({{event.eventId}}) && user && user.displayName !== owner" @click="cancelBooking({{event.eventId}})">Cancel Booking</span>
        </div>
        <div x-show="user.displayName === owner">
            You are the owner of this event. If you need to cancel this event please contact us.
        </div>
    </div>
    {# Message for people not logged in #}
    <div x-cloak x-show="!isAuth">
        You must be <button @click="modal = 'login'" class="underline text-highlight">logged in</button> to book an event.
    </div>
</div>