<section class="mt-md">
    <h2 class="font-serif text-3xl font-bold leading-none md:text-4xl text-header mb-base">Events List</h2>
    <table class="w-full text-sm text-body">
        <thead>
            <tr>
                <th class="text-left pb-sm">Event Name</th>
                {# <th class="text-left pb-sm">System</th> #}
                <th class="text-left pb-sm">Categories</th>
                <th class="text-center pb-sm">Time PDT</th>
                <th class="w-8 text-center pb-sm">
                    <span class="flex items-center justify-end pl-xs">{% icon 'square-check', 'fill-body' %}</span>
                </th>
                <th class="w-8 text-center pb-sm">
                    <span class="flex items-center justify-end pl-xs">{% icon 'star', 'fill-body' %}</span>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for event in eventData.events %}
                {% set metadata = event.metadata | metadataArrayToObject %}
                <tr class="" x-data="{ eventId: {{event.eventId}} }">
                    {# Event Name #}
                    <td class="py-sm pr-sm">
                        <a href="/events/{{event.eventSlug}}" class="text-highlight">{{event.eventName | safe }}</a>
                    </td>
                    {# System #}
                    {# <td class="py-sm pr-sm">{{metadata.System}}</td> #}
                    {# Event Categories #}
                    <td class="py-sm pr-sm">
                        {% for category in event.categories %}
                            {% if loop.last %}
                                <span>{{category.name}}</span>
                            {% else %}
                                <span>{{category.name}}</span>,
                            {% endif %}
                        {% endfor %}
                    </td class="py-sm pr-sm">
                    <td class="w-24 text-center py-sm">{{ event.eventStartTime | stripSeconds }} &ndash; {{ event.eventEndTime | stripSeconds }}</td>
                    {# Booked Event Icon #}
                    <td>
                        <span x-cloak x-show="$store.auth.isBooked({{event.eventId}})" class="flex justify-end pl-xs">{% icon 'square-check' %}</span>
                    </td>
                    {# Fav Event Icon #}
                    <td>
                        <span x-cloak class="flex justify-end opacity-40 pl-xs hover:opacity-100" :class="$store.auth.isFav({{event.eventId}}) && 'favved'">{% icon 'star', 'fill-body' %}</span>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>