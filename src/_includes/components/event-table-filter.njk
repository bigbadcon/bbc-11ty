<div class="flex flex-wrap items-center justify-start border-t-2 border-b-2 mb-base text-body gap-sm py-sm border-hr" >
    <div class="flex flex-wrap items-center justify-start gap-xs">
        <h5 class="text-sm font-bold">Timezone:</h5>
        {% include 'components/timezone-select.njk' %}
    </div>
    <div class="flex items-center justify-start gap-xs" x-cloak x-show="$store.auth.isAuth">
        {# favsOnly data is in x-data="eventFilter" in wrapping div in base.njk #}
        <h5 class="text-sm font-bold">Filter:</h5>
        <button @click="$store.auth.toggleFavsOnly()" class="flex items-center transition-colors rounded group gap-x-xs bg-main-gradient-bottom px-sm py-2xs hover:bg-primary">
            <svg class="w-4 h-4 group-hover:fill-highlight" :class="($store.auth.favsOnly) ? 'fill-highlight' : 'fill-body'">
                <use xlink:href="/static/images/icons.svg#star"></use>
            </svg>
            <span class="text-sm">Favs</span>
        </button>
        {# TODO: Hiding this for events for Big Bad Online Need to update this so it's more flexible for various filters. #}
        {% if listing == "volunteer" %}
            <button @click="$store.auth.toggleOpenOnly()" class="flex items-center transition-colors rounded group gap-x-xs bg-main-gradient-bottom px-sm py-2xs hover:bg-primary">
                <svg class="w-4 h-4 group-hover:fill-highlight" :class="($store.auth.openOnly) ? 'fill-highlight' : 'fill-body'">
                    <use xlink:href="/static/images/icons.svg#square-full"></use>
                </svg>
                <span class="text-sm">Open Spaces</span>
            </button>
        {% endif %}
    </div>
</div>