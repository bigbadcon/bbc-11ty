<div class="flex flex-wrap items-center justify-start border-t-2 border-b-2 mb-base text-body gap-sm py-sm border-hr" >
    {# <div class="flex flex-wrap items-center justify-start gap-xs">
        <h5 class="text-sm font-bold">Timezone:</h5>
        {% include 'components/timezone-select.njk' %}
    </div> #}

    <div class="flex items-center justify-start gap-xs">
        <h5 class="text-sm font-bold">Category:</h5>
        <select class="mb-0 text-sm cursor-pointer px-xs py-2xs" x-model="filter.category" >
            <option value="All">All</option>
            <option value="RPG">RPG</option>
            <option value="LARP">LARP</option>
            <option value="Board/Card Game">Board/Card Game</option>
            <option value="Playtest">Playtest</option>
            <option value="Panel">Panel</option>
            <option value="Workshop">Workshop</option>
            <option value="GoD">GoD</option>
            <option value="All Ages">All Ages</option>
            <option value="Early Signup">Early Signup</option>
        </select>
    </div>
    {# favsOnly data is in x-data="eventFilter" in wrapping div in base.njk #}
    <div class="flex items-center justify-start gap-xs" x-cloak x-show="isAuth">
        <h5 class="text-sm font-bold">Filter:</h5>
        <button @click="filter.favsOnly = !filter.favsOnly" 
        class="filter-btn group">
            <svg class="w-4 h-4 group-hover:fill-secondary" :class="(filter.favsOnly) ? 'fill-highlight' : 'fill-body'">
                <use xlink:href="/static/images/icons.svg#star"></use>
            </svg>
            <span class="text-sm">Favs</span>
        </button>
        <button @click="filter.openOnly = !filter.openOnly" 
        class="filter-btn group">
            <svg class="w-4 h-4 group-hover:fill-secondary" :class="(filter.openOnly) ? 'fill-highlight' : 'fill-body'">
                <use xlink:href="/static/images/icons.svg#square-full"></use>
            </svg>
            <span class="text-sm">Open Spaces</span>
        </button>
    </div>
</div>