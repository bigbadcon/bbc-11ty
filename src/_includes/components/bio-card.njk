{% macro card(person) %}
    <article class="shadow-lg rounded-xl bg-card" id="{{ person.data.title | slugify }}">
        <header class="grid gap-6 sm:grid-cols-3 bg-header-bg bg-gradient-to-br from-header-bg via-header-bg-2 to-header-bg-2 p-base rounded-t-xl">
            <div>
                <figure class="aspect-w-1 aspect-h-1" >
                    <img class="block object-cover object-center w-full h-full border-4 border-white rounded-full drop-shadow-bbc"  src="{{person.data.image}}" alt="image of {{ person.data.name }}">
                </figure>
            </div>
            <div class="sm:col-span-2">
                <h2 class="space-x-xs mb-2xs">
                    <span class="font-serif text-4xl text-header">{{ person.data.title }}</span>
                    <span class="font-bold text-body">{{person.data.gender}}</span></h2>
                <h3 class="font-serif text-3xl leading-none text-header mb-base">{{ person.data.position }}</h3>
                <ul>
                    {% if person.data.twitter %}
                        <li>
                            <a href="https://twitter.com/{{person.data.twitter}}" class="icon-twitter mb-xs">@{{person.data.twitter}}</a>
                        </li>
                    {% endif %}
                    {% if person.data.mastodon %}
                        <li>
                            <a href="{{person.data.mastodon | mastodonLink}}" class="icon-mastodon mb-xs">{{person.data.mastodon}}</a>
                        </li>
                    {% endif %}
                    {% if person.data.website_url %}
                        <li>
                            <a href="{{person.data.website_url}}" class="icon-website">{{person.data.website_name}}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </header>
        <div class="w-full h-[20px] overflow-hidden relative z-10 top-[-1px]">
            {# header bottom wave #}
            <svg width="4000" height="18" xmlns="http://www.w3.org/2000/svg">
                <rect fill="url(#bio-wave-pattern)" stroke="transparent" width="4000" height="18"/>
            </svg>
        </div>
        <div class="py-base px-base">
            <div class="prose ">{{ person.templateContent | safe }}</div>
        </div>
    </article>
{% endmacro %}