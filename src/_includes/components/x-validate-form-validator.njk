{% macro log(id) %}
    <div class="fixed top-0 left-0 h-screen overflow-scroll text-xs prose form-validation-log text-body py-base w-72 bg-card p-sm">
        <h3>Validations</h3>
        <p>
            <small>List of data from <code>$validate.data('{{id}}')</code>
            </small>
        </p>
        <table>
            <thead>
                <tr>
                    <th>name</th>
                    <th>rqrd</th>
                    <th>value</th>
                    <th>valid</th>
                </tr>
            </thead>
            <tbody>
                <template x-for="v in $validate.data('{{id}}')">
                    <tr>
                        <td class="leading-tight py-2xs">
                            <span x-text="v.name"></span>
                            <span x-text="v.group ? ' (group)' : ''"></span></td>
                        <td class="leading-tight py-2xs" x-text="v.required ? '&#x2713;' : ''"></td>
                        <td class="leading-tight py-2xs" x-text="v.value"></td>
                        <td class="leading-tight py-2xs" x-text="v.valid ? '&#x2713;' : ''"></td>
                    </tr>
                </template>
            </tbody>
        </table>
        <p>$validate.isComplete: <b x-text="$validate.isComplete('{{id}}')"></b>
        </p>
    </div>
{% endmacro %}